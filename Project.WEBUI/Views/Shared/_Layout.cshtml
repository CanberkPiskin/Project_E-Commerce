<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <style>
        body{
            margin:0;
            padding:0;
        }
        nav>li {
            float: right;
            padding-left:10px;
        }

        i {
            color: #333;
            font-size: 20px;
        }
        .btn{
            margin-left:20px;
        }

        ul{
            list-style:none;
        }

        .brand-icon{
            color: #fff;
        }

        .brand-icon:hover{
            text-decoration:none;
            color:#fff;
        }

        #cart-icon {
            color: #fff
        }

        #cart-icon:hover {
            color: #9FA8DA;
        }
        footer>div{
            text-align: center;
        }
        .footer-list {
            margin-top: 20px;
        }
        .footer-text {
            color:#fff;
        }
        .footer-text:hover{
            text-decoration:none;
            color:#9FA8DA;
        }
        .footer-icon {
            font-size: 25px;
            display: inline-block;
            margin-top: 20px;
        }
        .fab{
            color:#fff;
        }
        .fab:hover{
            color:#9FA8DA;
        }
        #logo-icon:hover{
            color:#fff;
        }
        #render-body{
            padding-bottom:250px;
        }

    </style>
</head>
<body>
    <nav class="navbar bg-dark navbar-expand-sm navbar-dark fixed-top">
        <div class="container">

            <div class="navbar-brand">
                <a href="@Url.Action("Index","Home")" class="brand-icon"><i id="logo-icon" class="fab fa-edge-legacy"></i>&nbsp;E-Commerce</a>
            </div>

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div id="navbarCollapse" class="collapse navbar-collapse">

                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a href="@Url.Action("Index","Home")" class="nav-link active">Home</a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("About","Home")" class="nav-link active">About</a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link active"><i id="cart-icon" class="fas fa-shopping-cart"></i></a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("Login","Home")" class="btn btn-info">Log in</a>
                    </li>
                    <li class="nav-item">
                        <a href="@Url.Action("RegisterNow","Register")" class="btn btn-info">Sign up</a>
                    </li>
                </ul>

            </div>
        </div>
    </nav>

    <div id="render-body" class="container body-content">
        @RenderBody()
    </div>

    <footer class="footer bg-dark p-3" style="height:250px" ;>
        <div class="container text-white">
            <ul class="footer-list">
                <li>
                    <a href="#" class="footer-text">Home</a>
                </li>
                <li>
                    <a href="@Url.Action("About","Home")" class="footer-text">About</a>
                </li>
                <li>
                    <a href="#" class="footer-text">Contact</a>
                </li>
                <li>
                    <a href="#" class="footer-text">Privacy Policy</a>
                </li>
                <li class="footer-icon">
                    <a href="#">
                        <i class="fab fa-facebook-f"></i>
                    </a>
                </li>
                <li class="footer-icon">
                    <a href="#">
                        <i class="fab fa-instagram"></i>
                    </a>
                </li>
                <li class="footer-icon">
                    <a href="#">
                        <i class="fab fa-twitter"></i>
                    </a>
                </li>
                <li class="footer-icon">
                    <a href="#">
                        <i class="fab fa-amazon"></i>
                    </a>
                </li>
            </ul>

            <hr style="color: #fff;background-color: #fff;">

            <div class="footer-bottom">
                <span class="bottom-text text-white"> Copyright © E-Commerce Turkey, @DateTime.Now.Year.</span>
            </div>
        </div>
    </footer>



    <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/589fbaa167.js" crossorigin="anonymous"></script>
</body>
</html>