
@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>


<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300&display=swap" rel="stylesheet">

    <style>
        body {
            margin-top: 100px;
            font-family: 'Open Sans', sans-serif;
            background-color: #C5CAE9;
        }

        img {
            margin-top: 20px;
            max-width: 100%;
            height: auto;
        }

    </style>

</head>
<body>
    <main>
        <div class="container">
            <div class="homepage-carousel">
                <div id="slider" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#slider" data-slide-to="0" class="active"></li>
                        <li data-target="#slider" data-slide-to="1"></li>
                        <li data-target="#slider" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img class="d-block w-100" src="~/Pictures/where_to_buy_purple_iphone_12_12_mini_thumb800.jpg" alt="">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/Pictures/iphone_four.jpg" alt="">
                        </div>
                        <div class="carousel-item">
                            <img class="d-block w-100" src="~/Pictures/1603993060440-iphone-12-pro-max.jpg" alt="">
                        </div>
                    </div>
                    <a href="#slider" class="carousel-control-prev" data-slide="prev">
                        <span class="carousel-control-prev-icon"></span>
                    </a>
                    <a href="#slider" class="carousel-control-next" data-slide="next">
                        <span class="carousel-control-next-icon"></span>
                    </a>
                </div>
            </div>
            <div class="imac-image">
                <img src="~/Pictures/apple_new-imac-spring21_hero_04202021.jpg" class="w-100">
            </div>
            <div class="airpods-image">
                <img src="~/Pictures/Apple-Watch-Series-6.jpg" class="w-100">
            </div>
            <div class="row">
                <div class="col-md-6">
                    <img class="apple-watch" src="~/Pictures/Apple-iMac.jpg">
                </div>
                <div class="col-md-6">
                    <img class="ipad-pro" src="~/Pictures/watch-se-91.jpg">
                </div>
            </div>
        </div>
    </main>


</body>
</html>









